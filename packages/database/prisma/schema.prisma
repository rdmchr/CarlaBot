// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id
  servers       Server[]
  permissions   Permissions @relation(fields: [permissionsId], references: [id])
  permissionsId String      @unique
  lastSeen      DateTime?
  verified      Boolean
  tag           String?
}

model Server {
  id        String   @id @default(cuid())
  type      String
  channel   String   @unique
  createdAt DateTime @default(now())
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  hetznerId Int      @unique
  ip        String
  port      Int
  password  String
  username  String
  database  String
}

model Permissions {
  id           String  @id @default(cuid())
  user         User?
  isAdmin      Boolean @default(false)
  canCreateDB  Boolean @default(false)
  maxDatabases Int     @default(1)
}

model WebUser {
  id              String @id @default(cuid())
  email           String @unique
  dcRefreshToken  String
  dcAccessToken   String
  dcAccessExpires Int
  dcId            String @unique
}

model Guild {
  id           String @id
  musicChannel String
}
